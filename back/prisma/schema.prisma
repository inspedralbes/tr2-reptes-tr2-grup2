// Every String @db.Text excepting the commented ones, is due to is actually JSONs or ARRAYs 
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Tallers {
  id Int @id @default(autoincrement())
  nom String
  descripcio String @db.Text // Actual Text
  target Dies
  institucio Int
  tallerista Int
  places_max Int
  places_disp Int
  duracio Int
  modalitat Modalitat
  direccio String
  horari String @db.Text
  curs String
  autoritzat Boolean @default(false)
}

model Institucions {
  id Int @id 
  nom String
  tipus Institucio
  responsable Int
}

model Inscripcions {
  id Int @id @default(autoincrement())
  institucio Int 
  coordinador Int
  primera_vegada Boolean
  trimestre Trimestre
  alumnes String @db.Text
  referents String @db.Text
  docents_referents String //@type Email
  comentari String @db.Text
  autoritzat Boolean
}

model Usuaris {
  id Int @id
  nom String
  rol Rol
  institucio Int 
  autoritzat Boolean 
}

model Assistencia {
  id Int @id @default(autoincrement())
  id_taller Int
  dia DateTime
  llista_alumnes String @db.Text
  llista_professors String @db.Text
  autoritzat Boolean
}

enum Trimestre {
  Primer
  Segon
  Tercer
}

enum Rol {
  Admin
  Professorat
  Extern
}

enum Institucio {
  CentreEducatiu
  AgentExtern
}

enum Dies {
  Dilluns
  Dimarts
  Dimecres
  Dijous
  Divendres
}

enum Modalitat {
  A
  B
  C
  D
}
